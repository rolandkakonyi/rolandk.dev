---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: 0 auto;
				padding: 1.25rem 1rem;
			}
			.hero {
				margin: 1.5rem 0 2rem 0;
			}
			.hero h1 {
				margin: 0 0 0.75rem 0;
				line-height: 1.1;
			}
			.lede {
				font-size: 1.1rem;
				color: rgb(var(--gray-dark));
			}
			.cta {
				display: flex;
				flex-wrap: wrap;
				gap: 0.75rem;
				margin-top: 1.25rem;
			}
			.cta a {
				display: inline-block;
				padding: 0.5rem 0.75rem;
				border-radius: 999px;
				border: 1px solid rgba(var(--gray), 30%);
				text-decoration: none;
				color: rgb(var(--black));
			}
			.cta a:hover {
				border-color: rgb(var(--accent));
				box-shadow: var(--box-shadow);
			}
			.section {
				margin-top: 2.5rem;
			}
			.post-list {
				list-style: none;
				padding: 0;
				margin: 0.75rem 0 0 0;
			}
			.post-list li {
				padding: 0.75rem 0;
				border-top: 1px solid rgba(var(--gray), 20%);
			}
			.post-list li:first-child {
				border-top: 0;
			}
			.post-title {
				margin: 0;
				font-size: 1.05rem;
			}
			.post-meta {
				margin: 0.25rem 0 0 0;
				color: rgb(var(--gray));
				font-size: 0.95rem;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<h1>Roland Kákonyi</h1>
				<p class="lede">
					Senior Software Engineer in Vienna building video players, SDKs, and AI-driven media
					workflows across iOS/tvOS/watchOS, React Native, and the web.
				</p>
				<div class="cta">
					<a href="/about">About</a>
					<a href="/experience">Experience</a>
					<a href="/blog">Blog</a>
					<a href="mailto:rolandkakonyi@gmail.com">Contact</a>
				</div>
			</section>

			<section class="section">
				<h2>What I work on</h2>
				<ul>
					<li>Video playback & streaming (HLS, FairPlay Streaming)</li>
					<li>Apple platform development (iOS/tvOS/watchOS)</li>
					<li>SDK engineering (including React Native player SDKs)</li>
					<li>AI-driven video analysis workflows</li>
					<li>Integrations (e.g., Google Cast)</li>
				</ul>
			</section>

			<section class="section">
				<h2>Latest writing</h2>
				{posts.length === 0 ? (
					<p>Nothing published yet. Soon.</p>
				) : (
					<ul class="post-list">
						{posts.map((post) => (
							<li>
								<p class="post-title">
									<a href={`/blog/${post.id}/`}>{post.data.title}</a>
								</p>
								<p class="post-meta">
									<FormattedDate date={post.data.pubDate} />
									{post.data.description ? ` · ${post.data.description}` : ''}
								</p>
							</li>
						))}
					</ul>
				)}
			</section>
		</main>
		<Footer />
	</body>
</html>
