---
import Layout from '../layouts/BlogPost.astro';
import { EXPERIENCE } from '../data/experience';

const pageTitle = 'Experience';
const pageDescription = 'Professional roles and educational background in software engineering and media technologies.';
---

<Layout title={pageTitle} description={pageDescription} pubDate={new Date()}>
	<h2>Work Experience</h2>

	{EXPERIENCE.map((job) => (
		<div class="job-item">
			<h3>{job.company} — {job.role}</h3>
			<p class="job-meta">{job.location} · {job.dates}</p>
			<ul>
				{job.bullets.map((bullet) => (
					<li>{bullet}</li>
				))}
			</ul>
		</div>
	))}

	<h2>Education</h2>
	
	<h3>University of Pécs — BSc in Computer Science</h3>
	<p class="job-meta">Pécs, Hungary · Graduated 2012</p>
</Layout>

<style>
	.job-item {
		margin-bottom: 2rem;
	}
	.job-meta {
		font-style: italic;
		color: rgb(var(--gray));
		margin-top: -0.5rem;
		margin-bottom: 1rem;
	}
</style>
